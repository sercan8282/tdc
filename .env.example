# BELANGRIJK: Dit bestand bevat gevoelige informatie
# Kopieer dit bestand naar .env en pas de waarden aan
# .env wordt NOOIT gecommit naar git!

# Django Settings
SECRET_KEY=your-secret-key-here-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Database (voor productie gebruik PostgreSQL)
DATABASE_NAME=db.sqlite3

# Security
CAPTCHA_SECRET=your-captcha-secret-here

# Rate Limiting (aantal pogingen voordat blocking)
RATE_LIMIT_WINDOW=300
MAX_LOGIN_ATTEMPTS=5
MAX_REGISTER_ATTEMPTS=3
MAX_API_CALLS_PER_MINUTE=60

# IP Blocking
AUTO_BLOCK_THRESHOLD=10
BLOCK_DURATION_HOURS=24
